<p id="notice"><%= notice %></p>

<h1>Reports</h1>

<%= will_paginate %>
<table>
  <thead>
    <tr>
      <th>File name</th>
      <th>File path</th>
      <th>Date</th>
      <th>Password</th>
      <th>Image path</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.file_name %></td>
        <td><%= report.file_path %></td>
        <td><%= report.date %></td>
        <td><%= report.password %></td>
        <td><%= report.image_path %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>

<br>

<%= link_to 'New Report', new_path %>
