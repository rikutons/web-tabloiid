<div id="index">
<div class="header">
  <div class="header-logo">
    イード内日報アプリ　タブロイード
  </div>
  <div class="header-return-button button">
    <%= link_to "新規作成", new_path %>
  </div>
</div>
<div class="contents">
<h2>日報一覧</h2>

<%= will_paginate %>
<div class="flex-container">

<% @reports.each do |report| %>
  <%= link_to(report.file_path) do %>
  <div class="flex-item">
    <div class="flex-item-img"><img src="<%= report.image_path %>" alt="No image" class=img></div>
    <div class="flex-item-body">
      <div class="flex-item-title"><%= report.file_name %></div>
      <div class="flex-item-date"><%= report.date %></div>
      <div class="right">
        <a style="cursor:pointer;"  onclick="obj=this.nextElementSibling.style; obj.display=(obj.display=='none')?'block':'none';">▼</a>
        <div class="secret" id="open" style="display:none;clear:both;">
          <input class="pass" type="password" name="passward" value="" maxlength="100" placeholder="Password">
          <div class="delete-button" ><%= button_to 'delete', report, method: :delete, data: { confirm: 'Are you sure?' } %></div>
        </div>
      </div>
    </div>
  </div>

  <% end %>
<% end %>
</div>

<nav class="cp_navi">
	<div class="cp_pagination">
		<a class="cp_pagenum prev" href="#">prev</a>
		<span aria-current="page" class="cp_pagenum current">1</span>
		<a class="cp_pagenum" href="#">2</a>
		<a class="cp_pagenum" href="#">3</a>
		<a class="cp_pagenum next" href="#">next</a>
	</div>
</nav>

<%= will_paginate %>

</div>