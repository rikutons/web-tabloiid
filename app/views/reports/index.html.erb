<div id="index">
<p id="notice"><%= notice %></p>

<div class="header">
    <div class="header-logo">イード内日報アプリ　タブロイード  <span>一覧へ戻る</span></div>
</div>

<div class="contents">
<h1>Reports</h1>

<%= will_paginate %>
<div class="flex-container">
<div class="flex-item">

<% @reports.each do |report| %>

  <figure><img src="<%= report.image_path %>" alt="タイトル"></figure>
  <h4><%= report.file_name %></h4>
  <p></p>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>File name</th>
      <th>File path</th>
      <th>Date</th>
      <th>Password</th>
      <th>Image path</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.file_name %></td>
        <td><%= report.file_path %></td>
        <td><%= report.date %></td>
        <td><%= report.password %></td>
        <td><%= report.image_path %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= button_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>

<br>

<%= link_to 'New Report', new_path %>

</div>